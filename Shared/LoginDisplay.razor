<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Olá, @context.User.Identity.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">Sair</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Registrar</a>
        <a href="Identity/Account/Login">Logar</a>
    </NotAuthorized>
</AuthorizeView>
