@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Conta criada com sucesso";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    
    CONFIRMAR: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar o cadastro</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}
